{
    "datacenter": "dc1",
    "data_dir": "/consul/data",
    "log_level": "DEBUG",
    "node_name": "consul-server-1",
    "server": true,
    "ui": true,
    "bootstrap_expect": 2,
    "client_addr": "0.0.0.0",
    "bind_addr": "{{ GetInterfaceIP \"eth0\" }}",
    "advertise_addr": "{{ GetInterfaceIP \"eth0\" }}",
    "retry_join": ["consul-server-2"],
    "ports": {
      "http": 8500,
      "dns": 8600,
      "serf_lan": 8301,
      "serf_wan": 8302,
      "server": 8300
    },
    "connect": {
      "enabled": true
    },
    "enable_script_checks": true,
    "enable_local_script_checks": true
  }
  